<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.ComboBox?>


<?import java.lang.String?>
<?import javafx.scene.control.ChoiceBox?>
<VBox alignment="CENTER" spacing="10" prefWidth="400" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.learningpath.ui.LearningPathController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Personalized Learning Path Generator" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <Label text="Learning Goal (e.g., Java, Ballet, Math):"/>
    <TextField fx:id="goalField" promptText="Enter your learning goal"/>
    <Label text="Skill Level:"/>
    <ChoiceBox fx:id="skillLevelBox">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Beginner"/>
                <String fx:value="Intermediate"/>
                <String fx:value="Advanced"/>
            </FXCollections>
        </items>
    </ChoiceBox>

    <Label text="Hours Available Per Week:"/>
    <TextField fx:id="hoursField" promptText="Enter hours (e.g., 5)"/>
    <Button fx:id="generateButton" text="Generate Learning Path" onAction="#generateLearningPath"/>
    <Label text="Your Learning Path:"/>
    <TextArea fx:id="resultArea" editable="false" prefHeight="200" wrapText="true"/>
</VBox>